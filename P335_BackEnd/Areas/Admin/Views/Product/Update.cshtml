@model ProductAddVM
@using P335_BackEnd.Entities

<h1>Update product</h1>

<br />

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="1">Name</label>
            <input asp-for="Name" class="form-control" id="1">
        </div>
        <br />
        <div class="form-group col-md-2">
            <label for="2">Price</label>
            <input asp-for="Price" step="0.01" class="form-control" id="2">
        </div>
        <br />
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="3">Category</label>
            <select asp-for="SelectedCategoryId" asp-items="@new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.Name))" id="3" class="form-control">
                <option disabled selected>Choose category</option>
            </select>
        </div>
        <br />
        <div class="form-group col-md-4">
            <label for="4">Type</label>
            <select asp-for="SelectedProductTypeId" asp-items="@new SelectList(Model.ProductTypes, nameof(ProductType.Id), nameof(ProductType.Name))" id="4" class="form-control">
                <option disabled selected>Choose type</option>
            </select>
        </div>
        <br />
        <div class="form-group col-md-4">
            <label for="5">Image</label>
            <input asp-for="Image" type="file" class="form-control img-input" id="5" />
            <img class="img-preview" src='~/img/featured/@ViewData["imageUrl"]' style="width: 120px; height: 100px"/>
            <button class="btn btn-danger del-btn"><a asp-action="DeleteImage" style="text-decoration:none; color:white;">Delete Image</a></button>
        </div>
        <br />
    </div>
    <div class="form-group">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts{
    <script src="~/js/productAdd.js"></script>
}
